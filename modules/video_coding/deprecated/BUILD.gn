rtc_library("deprecated_unittests") {
  testonly = true
  sources = [ "session_info_unittest.cc" ]
  visibility += [ "../../../modules/*" ]
  deps = [
    ":deprecated_packet",
    ":deprecated_session_info",
    "../../../test:test_support",
  ]
}
