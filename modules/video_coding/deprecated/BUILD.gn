    "frame_buffer.cc",
    "frame_buffer.h",
  ]
  deps = [
    ":deprecated_jitter_buffer_common",
    ":deprecated_packet",
    ":deprecated_session_info",
    "../../../api/video:encoded_image",
    "../../../api/video:video_rtp_headers",
    "../../../modules/video_coding:codec_globals_headers",
    "../../../modules/video_coding:encoded_frame",
